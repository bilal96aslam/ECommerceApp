<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainProductActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"

            />

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_image"
            android:hint="Product Name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:background="@drawable/inputs_design"/>


        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_name"
            android:hint="Product Price"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:background="@drawable/inputs_design"/>
        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_price"
            android:hint="Product Description"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:background="@drawable/inputs_design"/>


        <Button
            android:id="@+id/maintain_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_description"
            android:text="Apply Changes"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/maintain_product_btn_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_btn"
            android:text="Delete This Product"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:layout_margin="5dp"
            />


    </RelativeLayout>



</androidx.cardview.widget.CardView>